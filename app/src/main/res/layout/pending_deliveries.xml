<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/trackinglayout"
    android:background="@drawable/pen_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/pen_image"
        android:layout_gravity="center"

        android:layout_marginStart="16dp"
        android:src="@drawable/box"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:id="@+id/trackingTV"
            android:textSize="15.8sp"
            android:lines="2"

            android:fontFamily="@font/open_sans"
            android:textColor="#DE000000"
            android:height="24dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:letterSpacing="0.015"
            android:lineSpacingMultiplier="1.52"
            android:text="MS00074"
            android:width="232dp" />

        <TextView
            android:id="@+id/dateandtime"
            android:fontFamily="@font/open_sans"
            android:textColor="#99000000"
            android:textSize="11.85sp"
            android:height="16dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:letterSpacing="0.04"
            android:lineSpacingMultiplier="1.35"
            android:text="Mon Apr 08 2023 â€¢ 06:08 PM"
            android:width="192dp" />


        <TextView
            android:id="@+id/status_tv"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans"
            android:textColor="#99000000"
            android:textSize="13.82sp"
            android:height="20dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:letterSpacing="0.025"
            android:lineSpacingMultiplier="1.45"
            android:text="Received"
            android:width="75dp" />


        <View


            android:layout_marginTop="5dp"
            android:background="#1F000000"
            android:layout_width="match_parent"

            android:layout_height="1dp"/>
    </LinearLayout>



    </LinearLayout>



</LinearLayout>