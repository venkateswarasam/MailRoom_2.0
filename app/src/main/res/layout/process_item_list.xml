<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/list_bg"
    android:id="@+id/item_layout"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/text_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:id="@+id/trackingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Tracking #"
            android:textColor="#DE000000"
            android:textSize="15.8sp" />


        <TextView
            android:id="@+id/carruername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans"
            android:text="Carrier Name"
            android:textColor="#99000000"
            android:textSize="13.82sp"
            />
    </LinearLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="1"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:textColor="#99000000"
        android:textSize="13.82sp"
        android:layout_alignParentEnd="true"
        android:id="@+id/trackingcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/options_layout"
        android:layout_alignParentEnd="true"

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:background="#B00020"

            android:id="@+id/delete_img"
            android:src="@drawable/ic_outline_delete_outline_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


        <ImageView
            android:background="#BABABA"

            android:id="@+id/create_img"
            android:src="@drawable/ic_baseline_create_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


    </LinearLayout>



    <View
        android:layout_below="@+id/text_layout"
        android:layout_marginStart="16dp"

        android:layout_marginTop="5dp"
        android:background="#1F000000"
        android:layout_width="match_parent"

        android:layout_height="1dp"/>


</RelativeLayout>