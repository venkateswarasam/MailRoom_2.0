<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XCarrierMaterialDesign" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:typeface">serif</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ForgotPassword" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">.SF NS Display</item>
        <item name="android:textColor">#27AAE1</item>
        <item name="android:textSize">13.82sp</item>
    </style>


    <style name="Button">
        <item name="android:fontFamily">Open Sans</item>
        <item name="android:textSize">13.55sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">Open Sans</item>
        <item name="android:textColor">#FBFBFB</item>
        <item name="android:textSize">13.55sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="DiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="SpecificCornerCut">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="SpecificCornerRounded">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">15.8sp</item>
    </style>


    <style name="AppList" parent="@android:style/Widget.ListView">
        <item name="android:textSize">15.8sp</item>
        <item name="android:textColor">#99000000</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Theme.XCarrierMaterialDesign.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.XCarrierMaterialDesign.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.XCarrierMaterialDesign.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>